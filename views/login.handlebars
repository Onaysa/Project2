<div class="text-black column has-text-centered" style="border-radius: 25px;">

  <div class="columns is-mobile is-centered">
    <div class="column is-half">
      <p class="subtitle is-3">Login</p>
      <form class="login-form field">

        <div class="has-text-left">
          <span class="icon-text">
            <span class="icon">
              <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
            </span>
            <span>Email</span>
          </span>
          <div class="control">
            <input id="email-login" class="input" type="email" placeholder="e.g. alexsmith@gmail.com" />
          </div>
        </div>

        <div class="has-text-left">
          <span class="icon-text">
            <span class="icon">
              <i class="fas fa-key fa-lg me-3 fa-fw"></i>
            </span>
            <span>Password</span>
          </span>
          <div class="control is-centered">
            <input id="password-login" class="input" type="password" />
          </div>
        </div>
        <button type="submit" class="button is-danger has-text-centered">Submit</button>
      </form>
    </div>
  </div>
</div>
<!-- javascript file-->
<script src="../js/login.js"></script>