<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Shopping List</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
        />
        <link rel="stylesheet" href="../css/style.css" />
        <script
            defer
            src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
        ></script>
    </head>
    <body>
        <header>
            <a href="/">
                <h1
                    class="title is-2 has-text-black px-3 py-3 has-text-weight-bold is-moble"
                >Shopping List</h1>
            </a>
            <nav class="navbar mt-2">
                {{#if logged_in}}
                    <a
                        href="/lists"
                        class="button is-warning"
                    >My lists</a>
                    <button
                        id="logout"
                        class="button is-danger"
                    >logout</button>
                {{else}}
                    <button
                        id="login"
                        class="button is-danger"
                    >login</button>
                    <button id="signup" class="button is-warning">sign
                        up</button>
                {{/if}}
            </nav>
        </header>
        <main>
            {{{body}}}
        </main>
        <footer class="footer rows pb-2">
            <div class="row-is-full content has-text-centered">
                <p>
                    <strong>shopping list </strong>
                    by
                    <a href="https://github.com/Onaysa">Anisa Ali ,Justin
                        Fleming , Alec and Taja</a>
                    | made with
                    <a href="https://bulma.io/">bulma</a>
                    | source code:
                    <a href="https://github.com/Onaysa/Project2"><i
                            class="fab fa-github"
                        ></i></a>
                    <a href="mailto:anisa.ali.5999385@gmail.com"><i
                            class="far fa-envelope"
                        ></i></a>
                </p>
            </div>
        </footer>
        {{#if logged_in}}
            <script src="../js/logout.js"></script>
        {{else}}
            <script src="../js/main.js"></script>
        {{/if}}
    </body>
</html>